<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@drawable/rounded_orange_border"
        android:layout_margin="24dp"
        android:elevation="6dp">

        <TextView
            android:id="@+id/tvTrainingTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tu plan personalizado"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tvTrainingPlan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aquí va tu entrenamiento semanal..."
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/tvReminders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Consejos sobre alimentación, hidratación y descanso"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_orange_border"
            android:padding="16dp"
            android:textStyle="italic" />
    </LinearLayout>
</ScrollView>
